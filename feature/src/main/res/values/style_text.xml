<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:fontFamily">@font/maven_pro_extrabold</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InformationText">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/space_default</item>
        <item name="android:padding">@dimen/space_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

    <style name="PlainText">
        <item name="android:lineSpacingExtra">@dimen/space_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

    <style name="PlainText.Bold" parent="PlainText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccentText">
        <item name="android:fontFamily">@font/maven_pro_extrabold</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
    </style>
</resources>